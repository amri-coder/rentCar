{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}

	<section class="get-in-touch">

		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.firstName }},
					<a href="{{ path('app_logout') }}">Se déconnecter</a>
				</div>
			{% endif %}

			<h1 class="title">Veuillez vous connecter</h1>

			<div class="form-field col-lg-6">
				<label class="label" for="inputEmail">E-mail</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control input-text js-input" autocomplete="email" required autofocus>
			</div>

			<div class="form-field col-lg-6">
				<label class="label" for="inputPassword">Password</label>
				<input type="password" name="password" id="inputPassword" class="form-control input-text js-input" autocomplete="current-password" required>
			</div>
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
																																																																																																	        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																	        See https://symfony.com/doc/current/security/remember_me.html
																																																																																																	
																																																																																																	        <div class="checkbox mb-3">
																																																																																																	            <label>
																																																																																																	                <input type="checkbox" name="_remember_me"> Remember me
																																																																																																	            </label>
																																																																																																	        </div>
																																																																																																	    #}

			<div class="form-field col-lg-12">
				<input class="submit-btn" type="submit" value="S'identifier">
			</div>

		</form>
	</section>
{% endblock %}
