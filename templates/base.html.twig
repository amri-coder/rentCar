						</div>
						<!-- Grid column -->

						<!-- Grid column -->
						<div
							class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
							<!-- Links -->
							<h6 class="text-uppercase fw-bold mb-4">
								Contact
								<span class="animate-border border-black col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0"></span>
							</h6>
							<p>
								<i class="fas fa-home me-3"></i>
								Avenue de fouilleuse, 92500 Rueil Malmaison, Fr</p>
							<p>
								<i class="fas fa-envelope me-3"></i>
								amri.site@yahoo.com
							</p>
							<p>
								<i class="fas fa-phone me-3"></i>
								+ 33 (0)6 XX XX XX XX</p>

						</div>
						<!-- Grid column -->
					</div>
					<!-- Grid row -->
				</div>
			</section>
			<!-- Section: Links  -->

			<!-- Copyright -->
			<div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.05);">
				© 2021 Copyright
				<a class="text-reset fw-bold">
					| AMRI | All Right Reserved</a>
			</div>
			<!-- Copyright -->
		</footer>
		<!-- Footer -->


	</body>
</html>
